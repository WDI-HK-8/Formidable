app.controller('LogInCtrl', ['$scope', '$http','$auth','$location','$window', function($scope, $http, $auth, $location,$window){
  
  $scope.message = "LogIn";

  $scope.loginForm = {};

  $scope.login = function(){
    $auth.submitLogin($scope.loginForm).
      then(function(response){
        //handle success
        console.log(response);
        $window.location.href = '/#/dashboard';
      }).catch(function(response){
        //handle errors
        console.log(response);
      });
  }

}]);